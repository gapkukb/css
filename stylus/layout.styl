

for $v in left right none
    .{BEM(float,"",$v)}
      float: $v

for $item in visible auto scroll overlay
  for $sub in "" x y
    .{BEM(over,$sub,$item)}
      overflow{prefix($sub)} $item
.square
  position relative
  overflow hidden
  &--overable
    overflow visible
  &:before
    content: ""
    padding-top:100%;
    display:inline-block;
    vertical-align: middle
  &--img
    text-align: center
    >img
      vertical-align: middle
  &_view
    &--center
      position absolute
      left 50%
      top 50%
      transform translate(-50%,-50%)
      width fit-content





