BEM(b, e = '', m = '', m2 = '')
  $e = e ? '_' + e : e
  $m = m ? '--' + m : m
  $m2 = m2 ? '--' + m2 : m2
  return b + $e + $m + $m2

prefix(n)
  n ? '-' + n : ''

$merge()
  $list = {}

  for $arg in arguments
    for $key, $item in $arg
      $list[$key] = $item

  return $list

grid($point = '')
  for n in 1...$grid-count + 1
    $percent = tofixed(n)

    .{BEM(col, , $point, n)}
      width: $percent

    .{BEM(offset, , $point, n)}
      margin-left: $percent

  for item in xs sm md lg xl
    $v = (lookup('$gutter-' + item) / 1)

    .{BEM(gutter, , $point, item)}
      // margin: - $v
      >.col
        // padding: $v
        padding-bottom: $v
        padding-right: $v
transition(properties, duration, animate = null)
  $str = '', animate = animate ? ' ' + animate : ''

  for $i in split(',', properties)
    $str += $i + ' ' + duration + animate + ','

  transition: s($str)
