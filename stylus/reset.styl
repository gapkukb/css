+block(ske)
  width: 300px
  height: 100px
  position: relative

  +modifier('round')
    border-radius: 50%

  &:empty
    background: rgba(0, 0, 0, 0.12)
    overflow: hidden

    &:after
      content: ''
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
      z-index: 0
      background: linear-gradient(90deg, transparent, hsla(0, 0%, 100%, 0.5), transparent)
      animation: ske--wave 4s linear 2s infinite

@keyframes ske--wave
  0%
    transform: translateX(-100%)

  50%
    transform: translateX(100%)

  100%
    transform: translateX(100%)
